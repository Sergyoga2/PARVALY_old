---
import { formatDate } from '../utils/blog';

interface Props {
  posts: any[];
}

const { posts } = Astro.props;
const base = import.meta.env.BASE_URL;
---

{posts.length > 0 && (
  <section class="related-posts">
    <h2>Related Articles</h2>
    <div class="related-grid">
      {posts.map(post => (
        <a href={`${base}${post.data.slug}/`} class="related-card">
          <h3>{post.data.title}</h3>
          <span class="related-meta">{post.data.category} &middot; {formatDate(post.data.date)}</span>
        </a>
      ))}
    </div>
  </section>
)}
