---
interface FAQItem {
  q: string;
  a: string;
}

interface Props {
  items: FAQItem[];
}

const { items } = Astro.props;
---

<section class="faq-section">
  <h2>Frequently Asked Questions</h2>
  <div class="faq-list">
    {items.map(item => (
      <details class="faq-item">
        <summary>{item.q}</summary>
        <p>{item.a}</p>
      </details>
    ))}
  </div>
</section>
