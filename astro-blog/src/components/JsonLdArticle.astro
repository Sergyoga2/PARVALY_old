---
interface Props {
  title: string;
  description: string;
  datePublished: string;
  dateModified?: string;
  url: string;
  image?: string;
}

const { title, description, datePublished, dateModified, url, image } = Astro.props;

const jsonLd = {
  '@context': 'https://schema.org',
  '@type': 'BlogPosting',
  headline: title,
  description: description,
  datePublished: new Date(datePublished).toISOString(),
  dateModified: dateModified ? new Date(dateModified).toISOString() : new Date(datePublished).toISOString(),
  mainEntityOfPage: {
    '@type': 'WebPage',
    '@id': url,
  },
  author: {
    '@type': 'Organization',
    name: 'PARVALY',
    url: 'https://parvaly.com',
  },
  publisher: {
    '@type': 'Organization',
    name: 'PARVALY',
    url: 'https://parvaly.com',
  },
  ...(image ? { image: { '@type': 'ImageObject', url: image } } : {}),
};
---

<script type="application/ld+json" set:html={JSON.stringify(jsonLd)} />
